<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Forkify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <!-- Typography -->
    <style name="InlineElement">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Typography -->
    <style name="InlineTextWithColor" parent="InlineElement">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="HeadingWithColor" parent="InlineTextWithColor">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PreviewTextBase" parent="InlineElement">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="PreviewHeading" parent="InlineTextWithColor">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PreviewContentText" parent="InlineElement">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailInfoContentText" parent="InlineElement">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">true</item>
        <item name="drawableTint">@color/colorPrimary</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DetailHowToCookContentText" parent="InlineElement">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- Button -->
    <style name="RoundButton" parent="InlineElement">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButtonWithIcon" parent="RoundButtonWithLightRipple">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="RoundButtonWithLightRipple" parent="RoundButton">
        <item name="android:foreground">@drawable/round_button</item>
    </style>

    <style name="SearchResultPaginationButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:foreground">@drawable/round_button_darken</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimaryLight2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="AddRecipeSectionHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="IconWithColor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="IconButtonWithColor" parent="IconWithColor">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:foreground">@drawable/round_button_darken</item>
    </style>
</resources>